<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="@android:dimen/app_icon_size"
            android:textSize="40sp"
            android:textAlignment="center"
            android:text="Etanol X Gasolina" />

    <EditText
        android:id="@+id/etanolTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o valor do Etanol"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/gasolinaTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite o valor da Gasolina"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btCalcula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="calculaCombustivel"
        android:text="Calcular" />
    </LinearLayout>


